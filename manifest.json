{
  "manifest_version": 3,
  "name": "WebScribe",
  "version": "1.0.0",
  "description": "Highlight text on any website",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/highlight.js"],
      "run_at": "document_idle"
    }
  ]
}
